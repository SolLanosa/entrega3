<div class="container-cart">
  <h1>Carrito</h1>
  <h4>Productos en el carrito:</h4>
  <div class="container-products-carts">
     {{#each products}}
       <div class="product-container">
          <p><span>Producto:</span> {{this.product.title}}</p>
          <p><span>Cantidad:</span> {{this.quantity}}</p>
           <button onclick="deleteProduct('{{this.cart}}', '{{this.product._id}}')" >Borrar producto</button>
       </div>
      
      {{/each}}
  </div>
  <button onclick="endPurchase('{{cart}}')">FINALIZAR COMPRA</button>
  <button onclick="emptyCart('{{cart}}')">Vaciar carrito</button>
  <a class="volver" href="/products">volver</a>
</div>
<script src="/js/cart.js"></script>